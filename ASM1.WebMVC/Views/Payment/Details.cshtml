@model PaymentViewModel

@{
    ViewData["Title"] = "Payment Details";
}

<div class="row">
    <!-- Sidebar -->
    @await Html.PartialAsync("_NavigationSidebar")

    <!-- Main Content -->
    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="bi bi-credit-card"></i> 
                Payment Details
            </h2>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Index", "Payment")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Payments
                </a>
                <a href="@Url.Action("Details", "Order", new { id = Model.OrderId })" class="btn btn-info">
                    <i class="bi bi-receipt"></i> View Order
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-credit-card"></i>
                    Payment #@Model.PaymentId
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label text-muted">Payment ID</label>
                            <div class="fw-bold">#@Model.PaymentId</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted">Order ID</label>
                            <div class="fw-bold">
                                <a href="@Url.Action("Details", "Order", new { id = Model.OrderId })" class="text-decoration-none">
                                    #@Model.OrderId
                                </a>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted">Payment Amount</label>
                            <div class="h4 text-success">@Model.Amount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label text-muted">Payment Method</label>
                            <div>
                                <span class="badge bg-info fs-6">@Model.Method</span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted">Payment Date</label>
                            <div class="fw-bold">
                                @if (Model.PaymentDate.HasValue)
                                {
                                    @Model.PaymentDate.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">No date specified</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="d-flex gap-2">
                    <a href="@Url.Action("Index", "Payment")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Payments
                    </a>
                    <a href="@Url.Action("Details", "Order", new { id = Model.OrderId })" class="btn btn-info">
                        <i class="bi bi-receipt"></i> View Related Order
                    </a>
                    <button type="button" 
                            class="btn btn-danger" 
                            onclick="deletePayment(@Model.PaymentId)">
                        <i class="bi bi-trash"></i> Delete Payment
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this payment? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deletePayment(paymentId) {
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete", "Payment")' + '/' + paymentId;
            
            var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }
    </script>
}