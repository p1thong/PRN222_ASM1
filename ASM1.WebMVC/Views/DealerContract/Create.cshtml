@model ASM1.Repository.Models.DealerContract

@{
    ViewData["Title"] = "Create Dealer Contract";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create New Dealer Contract</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DealerId" class="form-label">Dealer</label>
                                    <select asp-for="DealerId" class="form-select" asp-items="ViewBag.Dealers">
                                        <option value="">-- Select Dealer --</option>
                                    </select>
                                    <span asp-validation-for="DealerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ManufacturerId" class="form-label">Manufacturer</label>
                                    <select asp-for="ManufacturerId" class="form-select" asp-items="ViewBag.Manufacturers">
                                        <option value="">-- Select Manufacturer --</option>
                                    </select>
                                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="TargetSales" class="form-label">Target Sales</label>
                                    <input asp-for="TargetSales" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="TargetSales" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CreditLimit" class="form-label">Credit Limit</label>
                                    <input asp-for="CreditLimit" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="CreditLimit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SignedDate" class="form-label">Signed Date</label>
                            <input asp-for="SignedDate" class="form-control" type="date" />
                            <span asp-validation-for="SignedDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Contract
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
