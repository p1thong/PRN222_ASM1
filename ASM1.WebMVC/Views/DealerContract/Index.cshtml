@model IEnumerable<ASM1.Repository.Models.DealerContract>

@{
    ViewData["Title"] = "Dealer Contracts";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Dealer Contracts Management</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Contract
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Contract ID</th>
                                    <th>Dealer</th>
                                    <th>Manufacturer</th>
                                    <th>Target Sales</th>
                                    <th>Credit Limit</th>
                                    <th>Signed Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contract in Model)
                                {
                                    <tr>
                                        <td>@contract.DealerContractId</td>
                                        <td>@contract.Dealer.FullName</td>
                                        <td>@contract.Manufacturer.Name</td>
                                        <td>@(contract.TargetSales?.ToString("C") ?? "N/A")</td>
                                        <td>@(contract.CreditLimit?.ToString("C") ?? "N/A")</td>
                                        <td>@(contract.SignedDate?.ToString("dd/MM/yyyy") ?? "Not Signed")</td>
                                        <td>
                                            @if (contract.SignedDate.HasValue)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@contract.DealerContractId" 
                                                   class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@contract.DealerContractId" 
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@contract.DealerContractId" 
                                                   class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
