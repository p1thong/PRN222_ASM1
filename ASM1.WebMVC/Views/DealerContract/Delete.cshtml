@model ASM1.Repository.Models.DealerContract

@{
    ViewData["Title"] = "Delete Dealer Contract";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Delete Dealer Contract
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this contract?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-box">
                                <h5>Contract Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Contract ID:</strong></td>
                                        <td>@Model.DealerContractId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Dealer:</strong></td>
                                        <td>@Model.Dealer.FullName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Manufacturer:</strong></td>
                                        <td>@Model.Manufacturer.Name</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            @if (Model.SignedDate.HasValue)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <h5>Financial Terms</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Target Sales:</strong></td>
                                        <td>@(Model.TargetSales?.ToString("C") ?? "Not Set")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Credit Limit:</strong></td>
                                        <td>@(Model.CreditLimit?.ToString("C") ?? "Not Set")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Signed Date:</strong></td>
                                        <td>@(Model.SignedDate?.ToString("dd/MM/yyyy") ?? "Not Signed")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="DealerContractId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Contract
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.DealerContractId" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
