@model List<SalesContractViewModel>

@{
    ViewData["Title"] = "Sales Contracts";
}

<style>
    .contract-table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }
    .contract-table th {
        padding: 1rem 0.75rem;
        font-weight: 600;
    }
    .dropdown-toggle::after {
        display: none;
    }
</style>

<div class="row">
    <!-- Sidebar -->
    @await Html.PartialAsync("_NavigationSidebar")

    <!-- Main Content -->
    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="bi bi-file-earmark-text"></i> 
                Sales Contracts Management
            </h2>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 table-striped contract-table">
                            <thead class="table-warning">
                                <tr>
                                    <th scope="col" style="width: 18%;">
                                        <i class="bi bi-file-earmark-text"></i> Contract ID
                                    </th>
                                    <th scope="col" style="width: 18%;">
                                        <i class="bi bi-receipt"></i> Order ID
                                    </th>
                                    <th scope="col" style="width: 20%;">
                                        <i class="bi bi-calendar-check"></i> Signed Date
                                    </th>
                                    <th scope="col" style="width: 24%;">
                                        <i class="bi bi-flag"></i> Status
                                    </th>
                                    <th scope="col" class="text-center" style="width: 20%;">
                                        <i class="bi bi-gear"></i> Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contract in Model)
                                {
                                    <tr style="vertical-align: middle;">
                                        <td class="fw-bold">#@contract.SaleContractId</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Order", new { id = contract.OrderId })" 
                                               class="text-decoration-none text-primary fw-medium">
                                                #@contract.OrderId
                                            </a>
                                        </td>
                                        <td>
                                            @if (contract.SignedDate.HasValue)
                                            {
                                                <span class="text-dark">@contract.SignedDate.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">No date</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-success px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i>Active & Signed
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle px-3 py-2" 
                                                        type="button" 
                                                        data-bs-toggle="dropdown" 
                                                        aria-expanded="false"
                                                        style="min-width: 100px;">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end" style="min-width: 150px;">
                                                    <li>
                                                        <a class="dropdown-item py-2" href="@Url.Action("Details", "SalesContract", new { id = contract.SaleContractId })">
                                                            <i class="bi bi-eye text-primary me-2"></i>View Details
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item py-2" href="@Url.Action("Details", "Order", new { id = contract.OrderId })">
                                                            <i class="bi bi-receipt text-info me-2"></i>View Order
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item py-2" href="@Url.Action("Create", "Payment", new { orderId = contract.OrderId })">
                                                            <i class="bi bi-credit-card text-success me-2"></i>Create Payment
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider my-1"></li>
                                                    <li>
                                                        <button type="button" 
                                                                class="dropdown-item text-danger py-2" 
                                                                onclick="deleteContract(@contract.SaleContractId)"
                                                                style="border: none; background: none; width: 100%; text-align: left;">
                                                            <i class="bi bi-trash text-danger me-2"></i>Delete
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-file-earmark-x display-1 text-muted"></i>
                </div>
                <h4 class="text-muted">No Sales Contracts Found</h4>
                <p class="text-muted">There are currently no sales contracts in the system.</p>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this sales contract? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteContract(contractId) {
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete", "SalesContract")' + '/' + contractId;
            
            var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }
    </script>
}