@model IEnumerable<object>

@{
    ViewData["Title"] = "Order Analytics";
    var manufacturerId = ViewBag.ManufacturerId;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Order Analytics by Vehicle Model</h3>
                    <a asp-action="Index" asp-route-manufacturerId="@manufacturerId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Model Name</th>
                                    <th>Category</th>
                                    <th>Total Orders</th>
                                    <th>Total Sales</th>
                                    <th>Variant Count</th>
                                    <th>Avg Order Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (dynamic orderModel in Model)
                                {
                                    <tr>
                                        <td>@orderModel.ModelName</td>
                                        <td>
                                            <span class="badge bg-info">@orderModel.Category</span>
                                        </td>
                                        <td>@orderModel.TotalOrders</td>
                                        <td>@(((decimal)orderModel.TotalSales).ToString("C"))</td>
                                        <td>@orderModel.VariantCount</td>
                                        <td>
                                            @{
                                                var avgValue = orderModel.TotalOrders > 0 ? 
                                                    ((decimal)orderModel.TotalSales) / (int)orderModel.TotalOrders : 0;
                                            }
                                            @avgValue.ToString("C")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
