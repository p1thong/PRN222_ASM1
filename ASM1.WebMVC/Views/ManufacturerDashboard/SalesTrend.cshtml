@model IEnumerable<object>

@{
    ViewData["Title"] = "Sales Trend";
    var manufacturerId = ViewBag.ManufacturerId;
    var months = ViewBag.Months;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Monthly Sales Trend (Last @months months)</h3>
                    <a asp-action="Index" asp-route-manufacturerId="@manufacturerId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Month</th>
                                    <th>Sales Amount</th>
                                    <th>Trend</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (dynamic month in Model)
                                {
                                    <tr>
                                        <td>@month.Month</td>
                                        <td>@(((decimal)month.Sales).ToString("C"))</td>
                                        <td>
                                            @{
                                                // Simple trend indicator (in real app, you'd calculate actual trend)
                                                var sales = (decimal)month.Sales;
                                                var trendClass = sales > 50000 ? "text-success" : 
                                                               sales > 30000 ? "text-warning" : "text-danger";
                                                var trendIcon = sales > 50000 ? "fa-arrow-up" : 
                                                              sales > 30000 ? "fa-minus" : "fa-arrow-down";
                                            }
                                            <span class="@trendClass">
                                                <i class="fas @trendIcon"></i>
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
