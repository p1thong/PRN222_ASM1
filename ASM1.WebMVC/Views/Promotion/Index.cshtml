@model IEnumerable<ASM1.Repository.Models.Promotion>

@{
    ViewData["Title"] = "Promotions Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Promotions Management</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Promotion
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Promotion ID</th>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Vehicle</th>
                                    <th>Promotion Code</th>
                                    <th>Discount Amount</th>
                                    <th>Valid Until</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var promotion in Model)
                                {
                                    <tr>
                                        <td>@promotion.PromotionId</td>
                                        <td>@promotion.OrderId</td>
                                        <td>@promotion.Order.Customer.FullName</td>
                                        <td>
                                            @promotion.Order.Variant.VehicleModel.Name - @promotion.Order.Variant.Version
                                            <br><small class="text-muted">@promotion.Order.Variant.Color</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@promotion.PromotionCode</span>
                                        </td>
                                        <td>@promotion.DiscountAmount.ToString("C")</td>
                                        <td>@(promotion.ValidUntil?.ToString("dd/MM/yyyy") ?? "No Expiry")</td>
                                        <td>
                                            @if (promotion.ValidUntil.HasValue && promotion.ValidUntil < DateOnly.FromDateTime(DateTime.Now))
                                            {
                                                <span class="badge bg-danger">Expired</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@promotion.PromotionId" 
                                                   class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@promotion.PromotionId" 
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@promotion.PromotionId" 
                                                   class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
