@model ASM1.Repository.Models.Promotion

@{
    ViewData["Title"] = "Edit Promotion";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit Promotion - @Model.PromotionCode</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PromotionId" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="OrderId" class="form-label">Order</label>
                            <select asp-for="OrderId" class="form-select" asp-items="ViewBag.Orders">
                                <option value="">-- Select Order --</option>
                            </select>
                            <span asp-validation-for="OrderId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PromotionCode" class="form-label">Promotion Code</label>
                            <input asp-for="PromotionCode" class="form-control" placeholder="e.g., SUMMER2024" />
                            <span asp-validation-for="PromotionCode" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DiscountAmount" class="form-label">Discount Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="DiscountAmount" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ValidUntil" class="form-label">Valid Until</label>
                            <input asp-for="ValidUntil" class="form-control" type="date" />
                            <small class="form-text text-muted">Leave empty for no expiration</small>
                            <span asp-validation-for="ValidUntil" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Promotion
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.PromotionId" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
