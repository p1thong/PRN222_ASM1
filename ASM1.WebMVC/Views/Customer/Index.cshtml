@model IEnumerable<ASM1.Service.Models.CustomerViewModel>
@{
    ViewData["Title"] = "Customer Management";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        @if (TempData["DetailErrors"] != null)
        {
            <br><small>Chi tiết: @TempData["DetailErrors"]</small>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2><i class="bi bi-people"></i> Customer Management</h2>
        <p class="text-muted">Manage your customers</p>
    </div>
    <a class="btn btn-success" asp-action="Add">
        <i class="bi bi-plus-circle"></i> Add New Customer
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Dealer</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Birthday</th>
                    <th style="min-width: 200px;">Actions</th>
                </tr>
            </thead>
    <tbody>
            @if (Model.Any())
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            <span class="badge bg-primary">
                                <i class="bi bi-building"></i> @customer.DealerName
                            </span>
                        </td>
                        <td><strong>@customer.FullName</strong></td>
                        <td>
                            <a href="mailto:@customer.Email" class="text-decoration-none">
                                <i class="bi bi-envelope"></i> @customer.Email
                            </a>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(customer.Phone))
                            {
                                <a href="tel:@customer.Phone" class="text-decoration-none">
                                    <i class="bi bi-telephone"></i> @customer.Phone
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (customer.Birthday.HasValue)
                            {
                                @customer.Birthday.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@customer.CustomerId" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@customer.CustomerId" title="Edit Customer">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@customer.CustomerId" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm" title="Delete Customer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center py-4">
                        <div class="text-muted">
                            <i class="bi bi-inbox display-1"></i>
                            <p class="mt-2">No customers found</p>
                            <a class="btn btn-primary" asp-action="Add">
                                <i class="bi bi-plus-circle"></i> Add First Customer
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
