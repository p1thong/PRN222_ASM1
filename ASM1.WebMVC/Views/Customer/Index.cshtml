@model IEnumerable<ASM1.Service.Models.CustomerViewModel>
@{
    ViewData["Title"] = "Customer Management";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        @if (TempData["DetailErrors"] != null)
        {
            <br><small>Chi tiết: @TempData["DetailErrors"]</small>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2><i class="bi bi-people"></i> Customer Management</h2>
        <p class="text-muted">Manage your customers</p>
    </div>
    <a class="btn btn-success" asp-action="Add">
        <i class="bi bi-plus-circle"></i> Add New Customer
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Dealer</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Birthday</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
    <tbody>
            @if (Model.Any())
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            <span class="badge bg-primary">
                                <i class="bi bi-building"></i> @customer.DealerName
                            </span>
                        </td>
                        <td><strong>@customer.FullName</strong></td>
                        <td>
                            <a href="mailto:@customer.Email" class="text-decoration-none">
                                <i class="bi bi-envelope"></i> @customer.Email
                            </a>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(customer.Phone))
                            {
                                <a href="tel:@customer.Phone" class="text-decoration-none">
                                    <i class="bi bi-telephone"></i> @customer.Phone
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (customer.Birthday.HasValue)
                            {
                                @customer.Birthday.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots"></i> Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@customer.CustomerId">
                                            <i class="bi bi-eye text-info"></i> View Details
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Update" asp-route-id="@customer.CustomerId">
                                            <i class="bi bi-pencil-square text-primary"></i> Edit Customer
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-action="Delete" asp-route-id="@customer.CustomerId" method="post" class="d-inline w-100" onsubmit="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; width: 100%; text-align: left;">
                                                <i class="bi bi-trash text-danger"></i> Delete Customer
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center py-4">
                        <div class="text-muted">
                            <i class="bi bi-inbox display-1"></i>
                            <p class="mt-2">No customers found</p>
                            <a class="btn btn-primary" asp-action="Add">
                                <i class="bi bi-plus-circle"></i> Add First Customer
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
