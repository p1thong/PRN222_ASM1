@model IEnumerable<ASM1.Repository.Models.VehicleModel>

@{
    ViewData["Title"] = $"Các mẫu xe của {ViewBag.ManufacturerName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Manufacturer")">
                            <i class="fas fa-industry"></i> Hãng xe
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.ManufacturerName</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-car"></i>
                        Các mẫu xe của @ViewBag.ManufacturerName
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row">
                            @foreach (var vehicleModel in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100 shadow-sm vehicle-model-card">
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title text-success">@vehicleModel.Name</h5>
                                            <p class="card-text">
                                                <span class="badge badge-secondary">@vehicleModel.Category</span>
                                            </p>
                                            <div class="mt-auto">
                                                <a href="@Url.Action("ModelDetails", "Vehicle", new { id = vehicleModel.VehicleModelId })" 
                                                   class="btn btn-outline-success btn-sm mr-2">
                                                    <i class="fas fa-info-circle"></i>
                                                    Chi tiết
                                                </a>
                                                <a href="@Url.Action("Variants", "Vehicle", new { modelId = vehicleModel.VehicleModelId })" 
                                                   class="btn btn-success btn-sm">
                                                    <i class="fas fa-list"></i>
                                                    Các phiên bản
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            Hãng xe @ViewBag.ManufacturerName chưa có mẫu xe nào trong hệ thống.
                        </div>
                    }

                    <!-- Back button -->
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Manufacturer")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Quay lại danh sách hãng xe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.vehicle-model-card {
    transition: transform 0.2s;
    border: 1px solid #dee2e6;
}

.vehicle-model-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
}

.badge-secondary {
    background-color: #6c757d;
}

.breadcrumb {
    background-color: #f8f9fa;
    border-radius: 0.375rem;
}
</style>
