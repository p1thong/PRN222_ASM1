@model ASM1.Repository.Models.VehicleVariant

@{
    ViewData["Title"] = "Edit Vehicle Variant";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Edit Vehicle Variant
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditVariant" method="post">
                        <input type="hidden" asp-for="VariantId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="VehicleModelId" class="form-label">
                                <i class="fas fa-car"></i> Vehicle Model *
                            </label>
                            <select asp-for="VehicleModelId" class="form-select">
                                <option value="">Select Vehicle Model</option>
                                @foreach (var vehicleModel in ViewBag.VehicleModels as IEnumerable<ASM1.Repository.Models.VehicleModel>)
                                {
                                    <option value="@vehicleModel.VehicleModelId">
                                        @vehicleModel.Name (@vehicleModel.Manufacturer?.Name)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="VehicleModelId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Version" class="form-label">
                                        <i class="fas fa-tag"></i> Version *
                                    </label>
                                    <input asp-for="Version" class="form-control" placeholder="e.g., 2.0L Turbo, Hybrid, Sport" />
                                    <span asp-validation-for="Version" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Color" class="form-label">
                                        <i class="fas fa-palette"></i> Color
                                    </label>
                                    <select asp-for="Color" class="form-select">
                                        <option value="">Select Color</option>
                                        <option value="White">White</option>
                                        <option value="Black">Black</option>
                                        <option value="Silver">Silver</option>
                                        <option value="Gray">Gray</option>
                                        <option value="Red">Red</option>
                                        <option value="Blue">Blue</option>
                                        <option value="Green">Green</option>
                                        <option value="Brown">Brown</option>
                                        <option value="Gold">Gold</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ProductYear" class="form-label">
                                        <i class="fas fa-calendar"></i> Production Year
                                    </label>
                                    <input asp-for="ProductYear" class="form-control" type="number" min="1900" max="2030" />
                                    <span asp-validation-for="ProductYear" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">
                                        <i class="fas fa-dollar-sign"></i> Price (USD)
                                    </label>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Variants" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Variant
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
