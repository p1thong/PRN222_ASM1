@model IEnumerable<ASM1.Repository.Models.VehicleVariant>

@{
    ViewData["Title"] = "Vehicle Variants";
    var vehicleModel = ViewBag.VehicleModel as ASM1.Repository.Models.VehicleModel;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-cogs"></i> Vehicle Variants
                    @if (vehicleModel != null)
                    {
                        <small class="text-muted">for @vehicleModel.Name</small>
                    }
                </h2>
                <div>
                    @if (vehicleModel != null)
                    {
                        <a asp-action="CreateVariant" asp-route-modelId="@vehicleModel.VehicleModelId" class="btn btn-primary me-2">
                            <i class="fas fa-plus"></i> Add Variant for @vehicleModel.Name
                        </a>
                    }
                    else
                    {
                        <a asp-action="CreateVariant" class="btn btn-primary me-2">
                            <i class="fas fa-plus"></i> Add New Variant
                        </a>
                    }
                    <a asp-action="Models" class="btn btn-outline-secondary">
                        <i class="fas fa-car"></i> View Models
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Model</th>
                                        <th>Version</th>
                                        <th>Color</th>
                                        <th>Year</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.VariantId</td>
                                            <td>
                                                <div>
                                                    <strong>@item.VehicleModel?.Name</strong>
                                                    <br />
                                                    <small class="text-muted">@item.VehicleModel?.Manufacturer?.Name</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@item.Version</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Color))
                                                {
                                                    <span class="badge bg-secondary">@item.Color</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.ProductYear.HasValue)
                                                {
                                                    <span class="badge bg-info">@item.ProductYear</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Price.HasValue)
                                                {
                                                    <strong class="text-success">$@item.Price.Value.ToString("N2")</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">TBD</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="VariantDetails" asp-route-id="@item.VariantId" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="EditVariant" asp-route-id="@item.VariantId" 
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="DeleteVariant" asp-route-id="@item.VariantId" 
                                                       class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-cogs fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Vehicle Variants Found</h4>
                            @if (vehicleModel != null)
                            {
                                <p class="text-muted">Start by adding the first variant for @vehicleModel.Name.</p>
                                <a asp-action="CreateVariant" asp-route-modelId="@vehicleModel.VehicleModelId" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add First Variant
                                </a>
                            }
                            else
                            {
                                <p class="text-muted">Start by adding your first vehicle variant.</p>
                                <a asp-action="CreateVariant" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add First Variant
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
