@model ASM1.Repository.Models.VehicleModel

@{
    ViewData["Title"] = $"Chi tiết mẫu xe - {Model.Name}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Manufacturer")">
                            <i class="fas fa-industry"></i> Hãng xe
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Models", "Manufacturer", new { id = Model.ManufacturerId })">
                            @Model.Manufacturer?.Name
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-car"></i>
                        Chi tiết mẫu xe: @Model.Name
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary">Thông tin cơ bản</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Tên mẫu xe:</strong></td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Hãng sản xuất:</strong></td>
                                    <td>@Model.Manufacturer?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Loại xe:</strong></td>
                                    <td>
                                        <span class="badge badge-secondary">@Model.Category</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Quốc gia:</strong></td>
                                    <td>@Model.Manufacturer?.Country</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-success">Thông tin hãng</h5>
                            <p class="text-muted">
                                <i class="fas fa-map-marker-alt"></i>
                                @Model.Manufacturer?.Address
                            </p>
                        </div>
                    </div>

                    @if (Model.VehicleVariants != null && Model.VehicleVariants.Any())
                    {
                        <hr>
                        <h5 class="text-info">
                            <i class="fas fa-list"></i>
                            Các phiên bản có sẵn
                        </h5>
                        <div class="row">
                            @foreach (var variant in Model.VehicleVariants)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-info">
                                        <div class="card-body">
                                            <h6 class="card-title text-info">@variant.Version</h6>
                                            <p class="card-text">
                                                <small class="text-muted">Màu: @variant.Color</small><br>
                                                <small class="text-muted">Năm: @variant.ProductYear</small><br>
                                                @if (variant.Price.HasValue)
                                                {
                                                    <strong class="text-success">@variant.Price.Value.ToString("C0")</strong>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i>
                            Chưa có phiên bản nào cho mẫu xe này.
                        </div>
                    }

                    <!-- Action buttons -->
                    <div class="mt-4">
                        <a href="@Url.Action("Models", "Manufacturer", new { id = Model.ManufacturerId })" 
                           class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Quay lại danh sách mẫu xe
                        </a>
                        
                        <a href="@Url.Action("Variants", "Vehicle", new { modelId = Model.VehicleModelId })" 
                           class="btn btn-success ml-2">
                            <i class="fas fa-list"></i>
                            Xem tất cả phiên bản
                        </a>

                        <a href="@Url.Action("CreateVariant", "Vehicle", new { modelId = Model.VehicleModelId })" 
                           class="btn btn-primary ml-2">
                            <i class="fas fa-plus"></i>
                            Thêm phiên bản mới
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.badge-secondary {
    background-color: #6c757d;
}

.card.border-info {
    border-color: #17a2b8 !important;
}

.breadcrumb {
    background-color: #f8f9fa;
    border-radius: 0.375rem;
}
</style>
