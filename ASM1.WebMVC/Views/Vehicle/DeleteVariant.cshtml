@model ASM1.Repository.Models.VehicleVariant

@{
    ViewData["Title"] = "Delete Vehicle Variant";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Vehicle Variant
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning"></i> 
                        <strong>Warning!</strong> Are you sure you want to delete this vehicle variant? 
                        This action cannot be undone.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Variant Details:</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>ID:</strong></td>
                                    <td>@Model.VariantId</td>
                                </tr>
                                <tr>
                                    <td><strong>Model:</strong></td>
                                    <td>@Model.VehicleModel?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Manufacturer:</strong></td>
                                    <td>@Model.VehicleModel?.Manufacturer?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Version:</strong></td>
                                    <td>@Model.Version</td>
                                </tr>
                                <tr>
                                    <td><strong>Color:</strong></td>
                                    <td>@(Model.Color ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Year:</strong></td>
                                    <td>@(Model.ProductYear?.ToString() ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Price:</strong></td>
                                    <td>
                                        @if (Model.Price.HasValue)
                                        {
                                            <span class="text-success">$@Model.Price.Value.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">TBD</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Impact:</h5>
                            <ul class="list-unstyled">
                                <li>
                                    <i class="fas fa-times-circle text-danger"></i> 
                                    Vehicle Variant will be permanently deleted
                                </li>
                                <li>
                                    <i class="fas fa-info-circle text-info"></i> 
                                    Related orders, quotations, and test drives may be affected
                                </li>
                            </ul>

                            <div class="card bg-light mt-3">
                                <div class="card-body">
                                    <h6 class="card-title">Full Specification:</h6>
                                    <p class="card-text">
                                        <strong>@Model.VehicleModel?.Name</strong> - @Model.Version
                                        <br />
                                        <small class="text-muted">
                                            @Model.VehicleModel?.Manufacturer?.Name
                                            @if (!string.IsNullOrEmpty(Model.Color))
                                            {
                                                <span> | @Model.Color</span>
                                            }
                                            @if (Model.ProductYear.HasValue)
                                            {
                                                <span> | @Model.ProductYear</span>
                                            }
                                            @if (Model.Price.HasValue)
                                            {
                                                <span> | $@Model.Price.Value.ToString("N2")</span>
                                            }
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Variants" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <form asp-action="DeleteVariant" method="post" class="d-inline">
                            <input type="hidden" asp-for="VariantId" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this variant?')">
                                <i class="fas fa-trash"></i> Delete Permanently
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
