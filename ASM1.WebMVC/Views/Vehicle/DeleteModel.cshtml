@model ASM1.Repository.Models.VehicleModel

@{
    ViewData["Title"] = "Delete Vehicle Model";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Vehicle Model
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning"></i> 
                        <strong>Warning!</strong> Are you sure you want to delete this vehicle model? 
                        This action will also delete all associated variants and cannot be undone.
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Model Details:</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>ID:</strong></td>
                                    <td>@Model.VehicleModelId</td>
                                </tr>
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Category:</strong></td>
                                    <td>@(Model.Category ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Manufacturer:</strong></td>
                                    <td>@Model.Manufacturer?.Name</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Impact:</h5>
                            <ul class="list-unstyled">
                                <li>
                                    <i class="fas fa-times-circle text-danger"></i> 
                                    Vehicle Model will be permanently deleted
                                </li>
                                <li>
                                    <i class="fas fa-times-circle text-danger"></i> 
                                    @Model.VehicleVariants.Count() variant(s) will be deleted
                                </li>
                            </ul>

                            @if (Model.VehicleVariants.Any())
                            {
                                <div class="mt-3">
                                    <h6>Variants to be deleted:</h6>
                                    <div class="border rounded p-2 bg-light" style="max-height: 150px; overflow-y: auto;">
                                        @foreach (var variant in Model.VehicleVariants)
                                        {
                                            <small class="d-block">
                                                <i class="fas fa-cog text-muted"></i> 
                                                @variant.Version (@variant.Color) - @variant.ProductYear
                                            </small>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Models" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <form asp-action="DeleteModel" method="post" class="d-inline">
                            <input type="hidden" asp-for="VehicleModelId" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this model and all its variants?')">
                                <i class="fas fa-trash"></i> Delete Permanently
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
