@model IEnumerable<ASM1.Repository.Models.VehicleModel>

@{
    ViewData["Title"] = "Vehicle Models";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-car"></i> Vehicle Models
                </h2>
                <a asp-action="CreateModel" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Model
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Manufacturer</th>
                                        <th>Variants</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.VehicleModelId</td>
                                            <td>
                                                <strong>@item.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Category))
                                                {
                                                    <span class="badge bg-secondary">@item.Category</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@item.Manufacturer?.Name</td>
                                            <td>
                                                <span class="badge bg-info">@item.VehicleVariants.Count() variants</span>
                                                @if (item.VehicleVariants.Any())
                                                {
                                                    <a asp-action="VariantsByModel" asp-route-modelId="@item.VehicleModelId" 
                                                       class="btn btn-sm btn-outline-info ms-1">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="EditModel" asp-route-id="@item.VehicleModelId" 
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="CreateVariant" asp-route-modelId="@item.VehicleModelId" 
                                                       class="btn btn-sm btn-outline-success">
                                                        <i class="fas fa-plus"></i> Variant
                                                    </a>
                                                    <a asp-action="DeleteModel" asp-route-id="@item.VehicleModelId" 
                                                       class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-car fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Vehicle Models Found</h4>
                            <p class="text-muted">Start by adding your first vehicle model.</p>
                            <a asp-action="CreateModel" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First Model
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
