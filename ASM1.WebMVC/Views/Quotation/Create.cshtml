@model ASM1.WebMVC.Models.QuotationCreateViewModel
@{
    ViewData["Title"] = Model?.IsEdit == true ? "Chỉnh sửa báo giá" : "Tạo báo giá mới";
    var customer = ViewBag.Customer as ASM1.WebMVC.Models.CustomerViewModel;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">

            <!-- Step Progress Indicator -->
            <ul class="nav nav-pills justify-content-center mb-4">
                <li class="nav-item"><span class="badge bg-primary me-2">1</span> Thông tin KH</li>
                <li class="nav-item"><span class="badge bg-primary me-2">2</span> Chọn xe</li>
                <li class="nav-item"><span class="badge bg-primary me-2">3</span> Tính giá</li>
                <li class="nav-item"><span class="badge bg-primary me-2">4</span> Hoàn tất</li>
            </ul>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient text-white rounded-top-4" style="background: linear-gradient(135deg, #4e73df, #1cc88a);">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-text"></i> @(Model?.IsEdit == true ? $"Chỉnh sửa báo giá #{Model.QuotationId}" : "Tạo báo giá mới")
                    </h4>
                </div>

                <div class="card-body p-4">

                    <!-- Notifications -->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-warning rounded-3">
                            <i class="bi bi-info-circle"></i> Vui lòng kiểm tra lại thông tin:
                            <div asp-validation-summary="All" class="text-danger small"></div>
                        </div>
                    }

                    <!-- Customer Section -->
                    @if (customer != null)
                    {
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="bi bi-person"></i> Thông tin khách hàng</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6"><p><strong>Họ tên:</strong> @customer.FullName</p><p><strong>Email:</strong> @customer.Email</p></div>
                                    <div class="col-md-6"><p><strong>Điện thoại:</strong> @(customer.Phone ?? "Chưa có")</p><p><strong>Dealer:</strong> @customer.DealerName</p></div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Quotation Form -->
                    <form asp-action="Create" method="post" id="quotationForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="QuotationId" />
                        <input type="hidden" asp-for="CustomerId" value="@customer?.CustomerId" />
                        <input type="hidden" asp-for="DealerId" value="@ViewBag.DealerId" />
                        <input type="hidden" asp-for="BasePrice" id="HiddenBasePrice" />
                        <input type="hidden" asp-for="DiscountAmount" />
                        <input type="hidden" asp-for="AdditionalFees" />
                        <input type="hidden" asp-for="TaxRate" />
                        <input type="hidden" asp-for="DiscountDescription" />
                        <input type="hidden" asp-for="FeesDescription" />
                        <input type="hidden" asp-for="Status" />

                        <!-- Step 2: Choose Vehicle -->
                        <div class="mb-4">
                            <label for="VariantId" class="form-label"><i class="bi bi-car-front"></i> Chọn Variant Xe *</label>
                            <select asp-for="VariantId" class="form-select" id="VariantId" required>
                                <option value="">-- Chọn variant --</option>
                                @foreach (var variant in (IEnumerable<ASM1.WebMVC.Models.VehicleVariantViewModel>)ViewBag.VehicleVariants)
                                {
                                    <option value="@variant.VariantId" data-price="@variant.Price">
                                        @variant.FullName - @(variant.Color ?? "N/A") - @(variant.ProductYear ?? 0)
                                        @if (variant.Price.HasValue)
                                        {
                                            <text>(₫@(variant.Price.Value.ToString("N0")))</text>
                                        }
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="VariantId" class="text-danger small"></span>
                        </div>

                        <!-- Step 3: Pricing -->
                        <div class="card mb-4 d-none" id="pricingSection">
                            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                                <h6 class="mb-0"><i class="bi bi-calculator"></i> Tính toán chi tiết</h6>
                                <button type="button" class="btn btn-warning btn-sm" id="applyPromotionsBtn"><i class="bi bi-percent"></i> Áp dụng khuyến mãi</button>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Giá gốc xe</label>
                                        <div class="input-group"><span class="input-group-text">₫</span><input type="number" id="BasePriceDisplay" class="form-control" readonly></div>

                                        <label class="form-label mt-3">Giảm giá</label>
                                        <div class="input-group"><span class="input-group-text">₫</span><input type="number" id="DiscountAmountDisplay" class="form-control"></div>
                                        <small class="text-muted">Hoặc nhập tỷ lệ %</small>
                                        <div class="input-group mt-2">
                                            <input type="number" id="DiscountPercentage" class="form-control" placeholder="0"><span class="input-group-text">%</span>
                                            <button type="button" class="btn btn-outline-primary" id="applyPercentageBtn">Áp dụng</button>
                                        </div>

                                        <label class="form-label mt-3">Mô tả giảm giá</label>
                                        <input type="text" id="DiscountDescriptionDisplay" class="form-control">
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Phí bổ sung</label>
                                        <div class="input-group"><span class="input-group-text">₫</span><input type="number" id="AdditionalFeesDisplay" class="form-control"></div>

                                        <label class="form-label mt-3">Mô tả phí bổ sung</label>
                                        <input type="text" id="FeesDescriptionDisplay" class="form-control">

                                        <label class="form-label mt-3">Thuế (%)</label>
                                        <div class="input-group"><input type="number" id="TaxRateDisplay" class="form-control" value="0.1"><span class="input-group-text">%</span></div>
                                    </div>
                                </div>

                                <!-- Price Breakdown -->
                                <div class="mt-4">
                                    <h6 class="fw-bold">Chi tiết giá:</h6>
                                    <table class="table table-sm">
                                        <tr><td>Giá xe:</td><td class="text-end" id="displayBasePrice">₫0</td></tr>
                                        <tr class="text-success"><td id="discountLabel">Giảm giá:</td><td class="text-end" id="displayDiscount">-₫0</td></tr>
                                        <tr><td id="feesLabel">Phí bổ sung:</td><td class="text-end" id="displayFees">+₫0</td></tr>
                                        <tr><td>Thuế:</td><td class="text-end" id="displayTax">+₫0</td></tr>
                                        <tr class="fw-bold border-top"><td>Tổng cộng:</td><td class="text-end text-primary" id="displayFinalPrice">₫0</td></tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Step 4: Status -->
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-flag"></i> Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending - Đang chờ</option>
                                <option value="Approved">Approved - Đã duyệt</option>
                                <option value="Rejected">Rejected - Từ chối</option>
                            </select>
                        </div>

                        <!-- Final Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                            <div>
                                <button type="reset" class="btn btn-outline-dark me-2"><i class="bi bi-arrow-clockwise"></i> Reset</button>
                                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> @(Model?.IsEdit == true ? "Cập nhật báo giá" : "Tạo báo giá")</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/quotation.js"></script>
}
