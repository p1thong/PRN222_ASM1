@model IEnumerable<ASM1.WebMVC.Models.QuotationViewModel>
@{
    ViewData["Title"] = "Quotation Management";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <!-- Sidebar -->
    @await Html.PartialAsync("_NavigationSidebar")

    <!-- Main Content -->
    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2><i class="bi bi-file-earmark-text"></i> Quotation Management</h2>
                <p class="text-muted">Manage customer quotations</p>
            </div>
            <a class="btn btn-primary" asp-controller="Customer" asp-action="Index">
                <i class="bi bi-people"></i> Go to Customers
            </a>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-info">
                            <tr>
                                <th scope="col">
                                    <i class="bi bi-file-earmark-text"></i> Quotation ID
                                </th>
                                <th scope="col">
                                    <i class="bi bi-person"></i> Customer ID
                                </th>
                                <th scope="col">
                                    <i class="bi bi-car-front"></i> Variant ID
                                </th>
                                <th scope="col">
                                    <i class="bi bi-shop"></i> Dealer ID
                                </th>
                                <th scope="col">
                                    <i class="bi bi-currency-dollar"></i> Price
                                </th>
                                <th scope="col">
                                    <i class="bi bi-flag"></i> Status
                                </th>
                                <th scope="col">
                                    <i class="bi bi-calendar"></i> Created Date
                                </th>
                                <th scope="col" class="text-center">
                                    <i class="bi bi-gear"></i> Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var quotation in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>#@quotation.QuotationId</strong>
                                    </td>
                                    <td>@quotation.CustomerId</td>
                                    <td>@quotation.VariantId</td>
                                    <td>@quotation.DealerId</td>
                                    <td>
                                        <span class="text-success fw-bold">@(quotation.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</span>
                                    </td>
                                    <td>
                                        @switch (quotation.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-clock"></i> Pending
                                                </span>
                                                break;
                                            case "Approved":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Approved
                                                </span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Rejected
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@quotation.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (quotation.CreatedAt.HasValue)
                                        {
                                            @quotation.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle px-2 py-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" style="min-width: 120px;">
                                                <li>
                                                    <a class="dropdown-item py-1" href="@Url.Action("Details", "Quotation", new { id = quotation.QuotationId })">
                                                        <i class="bi bi-eye text-primary me-1"></i>Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item py-1" href="@Url.Action("Create", "Order", new { quotationId = quotation.QuotationId })">
                                                        <i class="bi bi-cart-plus text-success me-1"></i>Order
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider my-1"></li>
                                                <li>
                                                    <form asp-action="Delete" asp-route-id="@quotation.QuotationId" method="post" class="d-inline w-100" onsubmit="return confirm('Bạn có chắc chắn muốn xóa báo giá này?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="dropdown-item text-danger py-1" style="border: none; background: none; width: 100%; text-align: left;">
                                                            <i class="bi bi-trash text-danger me-1"></i>Delete
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="bi bi-inbox display-1"></i>
                                        <p class="mt-2">No quotations found</p>
                                        <a class="btn btn-primary" asp-controller="Customer" asp-action="Index">
                                            <i class="bi bi-people"></i> Go to Customers to Create Quotations
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</div>