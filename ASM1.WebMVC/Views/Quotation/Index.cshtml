@model IEnumerable<ASM1.Service.Models.QuotationViewModel>
@{
    ViewData["Title"] = "Quotation Management";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2><i class="bi bi-file-earmark-text"></i> Quotation Management</h2>
        <p class="text-muted">Manage customer quotations</p>
    </div>
    <a class="btn btn-primary" asp-controller="Customer" asp-action="Index">
        <i class="bi bi-people"></i> Go to Customers
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Quotation ID</th>
                    <th>Customer ID</th>
                    <th>Variant ID</th>
                    <th>Dealer ID</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var quotation in Model)
                    {
                        <tr>
                            <td>
                                <strong>#@quotation.QuotationId</strong>
                            </td>
                            <td>@quotation.CustomerId</td>
                            <td>@quotation.VariantId</td>
                            <td>@quotation.DealerId</td>
                            <td>
                                <span class="badge bg-success">
                                    ₫@((quotation.Price * 1000).ToString("N0"))
                                </span>
                            </td>
                            <td>
                                @switch (quotation.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning">
                                            <i class="bi bi-clock"></i> Pending
                                        </span>
                                        break;
                                    case "Approved":
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Approved
                                        </span>
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Rejected
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@quotation.Status</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (quotation.CreatedAt.HasValue)
                                {
                                    @quotation.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots"></i> Actions
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@quotation.QuotationId">
                                                <i class="bi bi-eye text-info"></i> View Details
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@quotation.QuotationId" method="post" class="d-inline w-100" onsubmit="return confirm('Bạn có chắc chắn muốn xóa báo giá này?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger" style="border: none; background: none; width: 100%; text-align: left;">
                                                    <i class="bi bi-trash text-danger"></i> Delete Quotation
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-4">
                            <div class="text-muted">
                                <i class="bi bi-inbox display-1"></i>
                                <p class="mt-2">No quotations found</p>
                                <a class="btn btn-primary" asp-controller="Customer" asp-action="Index">
                                    <i class="bi bi-people"></i> Go to Customers to Create Quotations
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>