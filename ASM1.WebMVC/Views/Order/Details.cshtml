@model ASM1.Repository.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-receipt"></i> 
        Order Details #@Model.OrderId
    </h2>
    <div>
        <a href="@Url.Action("Index", "Order")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Orders
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle"></i>
                    Order Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Order ID:</label>
                            <div class="fw-bold">@Model.OrderId</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Status:</label>
                            <div>
                                <span class="badge bg-info">@(Model.Status ?? "Unknown")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Customer:</label>
                            <div class="fw-bold">
                                @if (Model.Customer != null && !string.IsNullOrEmpty(Model.Customer.FullName))
                                {
                                    @Model.Customer.FullName
                                }
                                else
                                {
                                    <text>Customer ID: @Model.CustomerId</text>
                                }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mb-3">
                            <label class="form-label text-muted">Order Date:</label>
                            <div>
                                @if (Model.OrderDate.HasValue)
                                {
                                    @Model.OrderDate.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">No date</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Remove TotalAmount section since it doesn't exist in Order model -->

                <!-- Remove Notes section since it doesn't exist in Order model -->
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h6 class="mb-0">
                    <i class="bi bi-gear"></i>
                    Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", "Order", new { id = Model.OrderId })" 
                       class="btn btn-warning"
                       title="Edit this order">
                        <i class="bi bi-pencil"></i> Edit Order
                    </a>
                    <a href="@Url.Action("Create", "SalesContract", new { orderId = Model.OrderId })" 
                       class="btn btn-success"
                       title="Create a sales contract for this order">
                        <i class="bi bi-file-earmark-text"></i> Create Sales Contract
                    </a>
                    <hr class="my-2">
                    <button type="button" class="btn btn-primary" onclick="window.print()">
                        <i class="bi bi-printer"></i> Print Order
                    </button>
                    <button type="button" class="btn btn-danger" onclick="deleteOrder(@Model.OrderId)">
                        <i class="bi bi-trash"></i> Delete Order
                    </button>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="bi bi-clock-history"></i>
                    Timeline
                </h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6>Order Created</h6>
                            <small class="text-muted">
                                @if (Model.OrderDate.HasValue)
                                {
                                    @Model.OrderDate.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <text>No date</text>
                                }
                            </small>
                        </div>
                    </div>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Order Details - #@Model.OrderId</h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-box">
                                <h5>Order Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Order ID:</strong></td>
                                        <td>@Model.OrderId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            @switch (Model.Status?.ToLower())
                                            {
                                                case "pending":
                                                    <span class="badge bg-warning">Pending</span>
                                                    break;
                                                case "confirmed":
                                                    <span class="badge bg-info">Confirmed</span>
                                                    break;
                                                case "completed":
                                                    <span class="badge bg-success">Completed</span>
                                                    break;
                                                case "cancelled":
                                                    <span class="badge bg-danger">Cancelled</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@Model.Status</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Order Date:</strong></td>
                                        <td>@(Model.OrderDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <h5>Vehicle Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Manufacturer:</strong></td>
                                        <td>@Model.Variant.VehicleModel.Manufacturer.Name</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Model:</strong></td>
                                        <td>@Model.Variant.VehicleModel.Name</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Version:</strong></td>
                                        <td>@Model.Variant.Version</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Color:</strong></td>
                                        <td>@(Model.Variant.Color ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Year:</strong></td>
                                        <td>@(Model.Variant.ProductYear?.ToString() ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Price:</strong></td>
                                        <td>@(Model.Variant.Price?.ToString("C") ?? "N/A")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="info-box">
                                <h5>Customer Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Name:</strong></td>
                                        <td>@Model.Customer.FullName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td>@Model.Customer.Email</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Phone:</strong></td>
                                        <td>@(Model.Customer.Phone ?? "N/A")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Birthday:</strong></td>
                                        <td>@(Model.Customer.Birthday?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <h5>Dealer Information</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Name:</strong></td>
                                        <td>@Model.Dealer.FullName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td>@Model.Dealer.Email</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Phone:</strong></td>
                                        <td>@(Model.Dealer.Phone ?? "N/A")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    @if (Model.Promotions.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="info-box">
                                    <h5>Applied Promotions</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Promotion Code</th>
                                                    <th>Discount Amount</th>
                                                    <th>Valid Until</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var promotion in Model.Promotions)
                                                {
                                                    <tr>
                                                        <td>@promotion.PromotionCode</td>
                                                        <td>@promotion.DiscountAmount.ToString("C")</td>
                                                        <td>@(promotion.ValidUntil?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this order? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteOrder(orderId) {
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete", "Order")' + '/' + orderId;
            
            var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }
    </script>
}

@section Styles {
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 10px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }

        .timeline-marker {
            position: absolute;
            left: -25px;
            top: 0;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 2px solid white;
        }

        .timeline-content h6 {
            margin-bottom: 5px;
            font-size: 0.9rem;
        }

        @@media print {
            .btn, .card-header .bi-gear, .modal {
                display: none !important;
            }
        }
    </style>
}
