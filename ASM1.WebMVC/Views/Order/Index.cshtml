@model List<OrderViewModel>

@{
    ViewData["Title"] = "Orders";
}

<div class="row">
    <!-- Sidebar -->
    @await Html.PartialAsync("_NavigationSidebar")

    <!-- Main Content -->
    <div class="col-md-10">
        <div class="card shadow border-0 rounded-4">
            <!-- Header -->
            <div class="card-header d-flex justify-content-between align-items-center bg-gradient text-white rounded-top-4"
                 style="background: linear-gradient(135deg, #4e73df, #1cc88a);">
                <h4 class="mb-0"><i class="bi bi-list-ul"></i> Orders Management</h4>
                <a href="@Url.Action("Create")" class="btn btn-light btn-sm fw-bold shadow-sm">
                    <i class="bi bi-plus-circle"></i> New Order
                </a>
            </div>

            <!-- Body -->
            <div class="card-body p-4">
                <!-- Alerts -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show rounded-3">
                        <i class="bi bi-check-circle"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show rounded-3">
                        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Orders Table -->
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table align-middle table-hover">
                            <thead class="table-primary text-center">
                                <tr>
                                    <th><i class="bi bi-receipt"></i> Order</th>
                                    <th><i class="bi bi-person"></i> Customer</th>
                                    <th><i class="bi bi-calendar"></i> Date</th>
                                    <th><i class="bi bi-car-front"></i> Vehicle</th>
                                    <th><i class="bi bi-currency-dollar"></i> Price</th>
                                    <th><i class="bi bi-flag"></i> Status</th>
                                    <th><i class="bi bi-gear"></i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">#@order.OrderId</td>
                                        <td>@order.CustomerName</td>
                                        <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                        <td>@order.VehicleInfo</td>
                                        <td class="text-end">
                                            @order.TotalAmount?.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                        </td>
                                        <td class="text-center">
                                            @switch (order.Status?.ToLower())
                                            {
                                                case "pending":
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                    ; break;
                                                case "confirmed":

                                                    <span class="badge bg-info text-dark">Confirmed</span>
                                                    ; break;
                                                case "completed":

                                                    <span class="badge bg-success">Completed</span>
                                                    ; break;
                                                case "cancelled":

                                                    <span class="badge bg-danger">Cancelled</span>
                                                    ; break;
                                                default:

                                                    <span class="badge bg-secondary">@order.Status</span>
                                                    ; break;
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", new { id = order.OrderId })"
                                                   class="btn btn-sm btn-outline-info" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = order.OrderId })"
                                                   class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger"
                                                        onclick="deleteOrder(@order.OrderId)" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <!-- Empty State -->
                    <div class="text-center py-5">
                        <i class="bi bi-box display-1 text-muted"></i>
                        <h4 class="text-muted mt-3">No Orders Found</h4>
                        <p class="text-muted">Start by creating your first order.</p>
                        <a href="@Url.Action("Create")" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-plus-circle"></i> Create New Order
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-3">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">⚠️ Are you sure you want to delete this order?</p>
                <small class="text-muted">This action cannot be undone.</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-light text-danger fw-bold">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteOrder(orderId) {
            var form = document.getElementById('deleteForm');
            form.action = '@Url.Action("Delete")' + '/' + orderId;

            var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }
    </script>
}
