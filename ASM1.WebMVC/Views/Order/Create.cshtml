@model ASM1.Repository.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header text-white rounded-top-4"
                     style="background: linear-gradient(135deg, #4e73df, #1cc88a);">
                    <h4 class="mb-0 fw-bold text-center">Create New Order</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                        <!-- Dealer -->
                        <div class="form-floating mb-3">
                            <select asp-for="DealerId" class="form-select rounded-3">
                                <option value="">Select Dealer</option>
                            </select>
                            <label for="DealerId">Dealer</label>
                            <span asp-validation-for="DealerId" class="text-danger small"></span>
                        </div>

                        <!-- Customer -->
                        <div class="form-floating mb-3">
                            <select asp-for="CustomerId" class="form-select rounded-3">
                                <option value="">Select Customer</option>
                            </select>
                            <label for="CustomerId">Customer</label>
                            <span asp-validation-for="CustomerId" class="text-danger small"></span>
                        </div>

                        <!-- Vehicle Variant -->
                        <div class="form-floating mb-3">
                            <select asp-for="VariantId" class="form-select rounded-3">
                                <option value="">Select Vehicle Variant</option>
                            </select>
                            <label for="VariantId">Vehicle Variant</label>
                            <span asp-validation-for="VariantId" class="text-danger small"></span>
                        </div>

                        <!-- Status -->
                        <div class="form-floating mb-3">
                            <input asp-for="Status" class="form-control rounded-3" placeholder="Order status" />
                            <label for="Status">Status</label>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <!-- Order Date -->
                        <div class="form-floating mb-3">
                            <input asp-for="OrderDate" class="form-control rounded-3" type="datetime-local" />
                            <label for="OrderDate">Order Date</label>
                            <span asp-validation-for="OrderDate" class="text-danger small"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-3">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn text-white px-4 rounded-3"
                                    style="background: linear-gradient(135deg, #1cc88a, #36b9cc);">
                                <i class="bi bi-plus-circle me-1"></i> Create Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
