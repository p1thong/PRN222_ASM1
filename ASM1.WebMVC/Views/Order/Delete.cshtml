@model ASM1.Repository.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-4">
                <!-- Header -->
                <div class="card-header text-white rounded-top-4"
                     style="background: linear-gradient(135deg, #e74a3b, #f39c12);">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Order #@Model.OrderId
                    </h4>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <!-- Warning Box -->
                    <div class="alert alert-warning rounded-3">
                        <h5 class="fw-bold mb-1">Are you sure you want to delete this order?</h5>
                        <p class="mb-0">⚠️ This action <strong>cannot</strong> be undone.</p>
                    </div>

                    <!-- Order Details -->
                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded-3 bg-light">
                                <h6 class="fw-bold text-secondary mb-3">Order Information</h6>
                                <table class="table table-sm table-borderless mb-0">
                                    <tr>
                                        <td><strong>Order ID:</strong></td>
                                        <td>@Model.OrderId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            @switch (Model.Status?.ToLower())
                                            {
                                                case "pending":
                                                    <span class="badge bg-warning">Pending</span>
                                                    break;
                                                case "confirmed":
                                                    <span class="badge bg-info text-dark">Confirmed</span>
                                                    break;
                                                case "completed":
                                                    <span class="badge bg-success">Completed</span>
                                                    break;
                                                case "cancelled":
                                                    <span class="badge bg-danger">Cancelled</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@Model.Status</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Order Date:</strong></td>
                                        <td>@(Model.OrderDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded-3 bg-light">
                                <h6 class="fw-bold text-secondary mb-3">Vehicle & Customer</h6>
                                <table class="table table-sm table-borderless mb-0">
                                    <tr>
                                        <td><strong>Vehicle:</strong></td>
                                        <td>@Model.Variant.VehicleModel.Name - @Model.Variant.Version</td>
                                    </tr
