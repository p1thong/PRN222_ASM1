@model IEnumerable<ASM1.Repository.Models.TestDrive>

@{
    ViewData["Title"] = "Test Drive Management";
}

<h2>Test Drive List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Scheduled Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var td in Model)
        {
            <tr>
                <td>@td.TestDriveId</td>
                <td>@td.CustomerId</td>
                <td>@td.ScheduledDate</td>
                <td>@td.Status</td>
                <td>
                    <form asp-controller="Dealer" asp-action="UpdateTestDriveStatus"
                          asp-route-id="@td.TestDriveId" method="post">
                        <select name="status" class="form-control">
                            <option>Pending</option>
                            <option>Completed</option>
                            <option>Cancelled</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
